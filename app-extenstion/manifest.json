{
  "manifest_version": 3,
  "name": "ORD resolver",
  "version": "1.0",
  "description": "A Chrome extension that handles the custom 'ord://' URI protocol.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "16": "images/icon.jpeg",
    "48": "images/icon.jpeg",
    "128": "images/icon.jpeg"
    }
  },
  "icons": {
    "16": "images/icon.jpeg",
    "48": "images/icon.jpeg",
    "128": "images/icon.jpeg"
  }
}
